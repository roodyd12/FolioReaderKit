platform :ios, '11.0'

use_frameworks!
inhibit_all_warnings!

pre_install do |installer|
	installer.analysis_result.specifications.each do |s|
    s.swift_version = '5.1'
    end
end

def shared_pods
  pod 'FolioReaderKit', path: '../'
end

def testing_pods
  pod 'Quick', '2.2.0'
  pod 'Nimble', '8.0.4'
end

target 'Example' do
  shared_pods
end

target 'Storyboard-Example' do
	shared_pods
end

target 'MultipleInstance-Example' do
    shared_pods
end

target 'FolioReaderTests' do
  shared_pods
  testing_pods
end
